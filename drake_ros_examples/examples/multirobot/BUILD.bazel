# -*- mode: python -*-
# vi: set ft=python :

load("@ros2//:ros_cc.bzl", "ros_cc_binary")
load("@ros2//:ros_py.bzl", "ros_py_binary")

ros_cc_binary(
    name = "multirobot",
    srcs = ["multirobot.cc"],
    data = [
        "@drake//manipulation/models/iiwa_description:models",
    ],
    visibility = ["//visibility:public"],
    deps = [
        "@gflags//:gflags",
        "@drake//common:find_resource",
        "@drake//geometry:drake_visualizer",  # TODO(sloretz) remove in Jammy
        "@drake//multibody/parsing:parser",
        "@drake//multibody/plant",
        "@drake//systems/analysis:simulator",
        "@drake//systems/framework:diagram_builder",
        "@drake//systems/primitives:constant_vector_source",
        "@drake_ros//core",
        "@drake_ros//tf2",
        "@drake_ros//viz",
    ],
)

ros_py_binary(
    name = "multirobot_py",
    srcs = ["multirobot.py"],
    data = [
        "@drake//manipulation/models/iiwa_description:models",
    ],
    main = "multirobot.py",
    visibility = ["//visibility:public"],
    deps = [
        "@drake//bindings/pydrake",
        "@drake_ros//core:core_py",
        "@drake_ros//tf2:tf2_py",
        "@drake_ros//viz:viz_py",
        "@ros2//:rclpy_py",
    ],
)

sh_test(
    name = "multirobot_test",
    srcs = ["test/run_multirobot.sh"],
    data = [":multirobot"],
    args = ["$(location :multirobot)"]
)

sh_test(
    name = "multirobot_py_test",
    srcs = ["test/run_multirobot.sh"],
    data = [":multirobot_py"],
    args = ["$(location :multirobot_py)"]
)
